<!DOCTYPE html>
<html ng-app="alcomap">
<head>
  <title>Alkomap</title>
  <%= favicon_link_tag 'favicon.png' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag "//maps.googleapis.com/maps/api/js?key=#{ENV['GOOGLE_API_KEY']}&libraries=places,geometry" %>
  <%= javascript_include_tag 'markerclusterer.min.js' %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <link rel="apple-touch-icon" href="<%= asset_path 'apple-touch-icon-iphone.png' %>">
  <link rel="apple-touch-icon" sizes="76x76" href="<%= asset_path 'touch-icon-ipad.png' %>">
  <link rel="apple-touch-icon" sizes="120x120" href="<%= asset_path 'touch-icon-iphone-retina.png' %>">
  <link rel="apple-touch-icon" sizes="152x152" href="<%= asset_path 'touch-icon-ipad-retina.png' %>">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="mobile-web-app-capable" content="yes">
  <link rel="manifest" href="<%= asset_path 'manifest.json' %>">
</head>
<body>
<% if notice %>
    <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>

<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-67687455-1', 'auto');
    ga('send', 'pageview');

</script>
</body>
</html>
