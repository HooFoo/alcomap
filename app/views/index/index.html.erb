<div class="wrapper" ng-view ng-controller="IndexController as controller">
  <div class="title_wrapper">
    <h1 ng-model="controller.heading" class="app_tittle">{{controller.heading}}</h1>
  </div>
  <div class="container">
    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
      <div id="map"></div>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
      <span>comments</span>
    </div>
  </div>
  <form name="myForm" class="my-form">
    <div class="input-group">
      <span class="input-group-addon" id="point_name">Имя:</span>
      <input type="text" class="form-control" placeholder="" aria-describedby="point_name" ng-model="point.name">
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="point_long">Долгота:</span>
      <input type="text" class="form-control" placeholder="00.00" aria-describedby="point_long" ng-model="point.long">
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="point_lat">Широта:</span>
      <input type="text" class="form-control" placeholder="00.00" aria-describedby="point_lat" ng-model="point.lat">
    </div>
    <div class="input-group">
      <span class="input-group-addon" id="point_desc">Описание:</span>
      <input type="text" class="form-control" placeholder="" aria-describedby="point_desc" ng-model="point.description">
    </div>
    <div class="input-group">
      <button class="btn btn-default" ng-click="controller.addPoint()">Добавить</button>
    </div>
  </form>
</div>